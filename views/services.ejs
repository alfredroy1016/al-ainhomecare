<%- include('partials/header') %>

<section class="hero" style="padding: 40px 0; background: var(--bg-cream);">
    <div class="container" style="text-align: center;">
         <span class="tag-line">Our Expertise</span>
         <h1 class="hero-title">Our <span>Services</span></h1>
         <p style="max-width: 600px; margin: 0 auto; color: var(--text-light);">We provide a comprehensive range of home care services designed to ensure comfort, safety, and well-being.</p>
    </div>
</section>

<section class="services">
    <div class="container">
        
        <div class="services-grid">
            <!-- Home Care -->
            <div class="service-card">
                <div class="service-img">
                    <img src="/images/gallery/care_elder_1.png" alt="Home Care">
                </div>
                <h3>Home Care Services</h3>
                <p>Daily personal care, hygiene assistance, toileting support, mobility help, and routine assistance.</p>
            </div>

            <!-- Child Care -->
            <div class="service-card">
                <div class="service-img">
                    <img src="/images/gallery/care_child.png" alt="Child Care">
                </div>
                <h3>Child Care Services</h3>
                <p>Infant and toddler care, supervision, companionship, and supportive recovery care.</p>
            </div>

            <!-- Elder Care -->
            <div class="service-card">
                <div class="service-img">
                    <img src="/images/gallery/care_elder_2.png" alt="Elder Care">
                </div>
                <h3>Elder Care Services</h3>
                <p>Personalized elder care with emotional support, assistance with daily activities, and continuous care.</p>
            </div>

            <!-- Post Surgery -->
            <div class="service-card">
                <div class="service-img">
                    <img src="/images/gallery/care_consultation.png" alt="Rehabilitation">
                </div>
                <h3>Rehabilitation & Post-Surgery Care</h3>
                <p>Post-surgery recovery support, monitoring, care plan implementation, and coordination with families.</p>
            </div>
        </div>

        <div style="margin-top: 40px; text-align: center; padding: 20px; background: #fff; border-radius: 10px; border: 1px solid #eee;">
            <p class="note" style="color: var(--primary-teal); font-weight: 500;">All caregivers are professionally trained, background verified, and carefully selected.</p>
        </div>

    </div>
</section>

